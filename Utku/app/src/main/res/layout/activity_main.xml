<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_popup_background_mtrl_mult"
                android:gravity="center"
                android:padding="10dp"
                android:text="Demo UI for Backend get/post functions\n-Does not control network connection\n-ProgressBar is not implemented"/>

            <LinearLayout
                android:background="@drawable/abc_popup_background_mtrl_mult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Username"
                    android:id="@+id/tvUsername" />

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="E-mail"
                    android:id="@+id/tvEmail"/>

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:id="@+id/tvPassword"/>

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password (verify)"
                    android:id="@+id/tvPasswordV"/>

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Birth Date"
                    android:id="@+id/tvBirthDate"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create User"
                    android:onClick="btnOnClick"
                    android:id="@+id/btnCreateUser"
                    android:layout_gravity="center_horizontal" />

                </LinearLayout>

            <LinearLayout
                android:background="@drawable/abc_popup_background_mtrl_mult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="E-mail"
                    android:id="@+id/tvLoginEmail"/>

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:id="@+id/tvLoginPassword"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:onClick="btnOnClick"
                    android:id="@+id/btnLogin"
                    android:layout_gravity="center_horizontal" />

                </LinearLayout>

            <LinearLayout
                android:background="@drawable/abc_popup_background_mtrl_mult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="New E-mail"
                    android:id="@+id/tvChangeEmail"/>

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New E-mail verify"
                    android:id="@+id/tvChangeEmailAgain"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Email"
                    android:onClick="btnOnClick"
                    android:id="@+id/btnChangeEmail"
                    android:layout_gravity="center_horizontal" />

                </LinearLayout>

            <LinearLayout
                android:background="@drawable/abc_popup_background_mtrl_mult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="Old Password"
                    android:id="@+id/textOldPassword"/>

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="New Password"
                    android:id="@+id/textNewPassword"/>

                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password verify"
                    android:id="@+id/textNewPasswordV"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:onClick="btnOnClick"
                    android:id="@+id/btnChangePassword"
                    android:layout_gravity="center_horizontal" />

                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
</RelativeLayout>
